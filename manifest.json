{
  "manifest_version": 2,

  "name": "SoundStorm",
  "description": "Allows the SoundCloud play control bar to be brought up on any active tab.",
  "version": "0.0.0",

  "background": {
    "scripts": [ "background.js" ],
    "persistent": true
  },

  "content_scripts": [
    {
      "matches": [
        "http://*/*",
        "https://*/*"
      ],
      "js": [ "content.js" ]
    }
  ],

  "commands": {
    "toggle-play-control": {
      "suggested_key": {
        "default": "Ctrl+Space",
        "mac": "Command+Space"
      },
      "description": "Toggle the presence of the play control bar."
    }
  },

  "permissions": [
    "activeTab",
    "tabs",
    "<all_urls>"
  ]
}
